
<div class="large-3 xsmall-12 columns" id="search">

  <%= form_tag root_path, method: 'get', do %>
  <div class="large-12 columns">
    <div class="row collapse">
      <div class="small-12 columns">
        <label> Step 1... </label>
        <%= text_field_tag :performer, "", placeholder: 'Artist or Band Name...' %>
      </div>
    </div>
  </div>

  <fieldset>
    <label>Step 2...</label>
    <div class="row">
      <div class="small-12 columns">
        <input type="radio" name="option" value="location" id="location"><label for="location">Location</label>
        <input type="radio" name="option" value="date" id="date"><label for="date">Date</label>
      </div>
    </div>
    <div class="large-12 columns">
      <div class="row collapse">
        <div class="small-12 columns">
          <%= text_field_tag :option, "", placeholder: "When or Where" %>
        </div>
      </div>
    </div>
  </fieldset>

  <br>
  <div style="text-align: center;">
    <%= submit_tag "search", class:"small button round [radius round]" %>
  </div>
  <% end %>

</div>

<div class="large-9 xsmall-12 columns" id="map"></div>

<div class="large-3 xsmall-12 columns" id="results">

  <ul class="result-slider" data-orbit
    data-options="slide_number: false;
                  timer: false;">
    <div class="result-container-1" style="height: 260px">
      <li data-orbit-slide="headline-1">
        <div>
          <%= debug @concerts %>
        </div>
      </li>
    </div>
    <div class="result-container-2" style="height: 260px">
      <li data-orbit-slide="headline-2">
        <div>
          <h2>Headline 2</h2>
          <h3>Subheadline</h3>
        </div>
      </li>
    </div>
  </ul>

</div>
